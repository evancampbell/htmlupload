<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html lang="en" xml:lang="en" xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= title %></title>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag :defaults %>
    <script type='text/javascript'>
      $(function() {
        $('#upload_htmlfield').change(function() {
          $('#upload_rarfield').val('');
          var ext=$('#upload_htmlfield').val().split('.').pop().toLowerCase();
          var allow=new Array('html','htm');
          if (jQuery.inArray(ext,allow)==-1) {
            alert('Must be an html file!');
          }
        });
        $('#upload_rarfield').change(function() {
          $('#upload_htmlfield').val('');
          $('#upload_cssfield').val('');
          var ext=$('#upload_rarfield').val().split('.').pop().toLowerCase();
          var allow=new Array('rar','zip','gz','bz2');
          if (jQuery.inArray(ext,allow)==-1) {
            alert('Must be an archive file!');
          }
        });
        $('#upload_cssfield').change(function() {
          $('#upload_rarfield').val('');
          var ext=$('#upload_cssfield').val().split('.').pop().toLowerCase();
          var allow=new Array('css');
          if (jQuery.inArray(ext,allow)==-1) {
            alert('Must be a css file!');
          }
        });
      });
    </script>
  </head>
  <body>
    <div id='wrapper'>
      <%= render 'layouts/header' %>
      <div id="content" >
    <%= yield %>
    </div>
    <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>

